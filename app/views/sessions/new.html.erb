<div class="content">

  <h1>Log in</h1>

  <div class="pure-form pure-form-aligned">
    <fieldset>

      <%= form_tag '/login' do %>
        <div class="pure-control-group">
          <%= label_tag :email %>
          <%= text_field_tag :email %>
        </div>
        <div class="pure-control-group">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <div class="pure-controls">
          <%= submit_tag "Submit", class: "pure-button" %>
        </div>
      <% end %>

    </fieldset>
  </div>
  
</div>